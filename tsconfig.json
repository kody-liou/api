{
  "compilerOptions": {
    "skipLibCheck": true,
    "preserveConstEnums": true,
    "strictNullChecks": true,
    "sourceMap": true,
    "allowJs": true,
    "target": "es2017",
    "module": "es2015",
    "outDir": ".build",
    "moduleResolution": "node",
    "lib": ["es2020", "dom"],
    "rootDir": "./",
    "esModuleInterop": true,
    "types": ["jest", "node"],
    "typeRoots": ["./node_modules/@types"]
  }
}
